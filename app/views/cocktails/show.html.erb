<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @cocktail.name %></h1>
    <%= link_to new_cocktail_dose_path(@cocktail), class: "btn-elegant my-3" do %>
      <i class="fa fa-plus"> Add new dose</i>
    <% end %>
  </div>
  <div class="container">
    <% if @cocktail.photo.url.nil? %>
      <%= image_tag "https://picsum.photos/200/300" %>
    <% else %>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <% end %>
    <div class="row">
      <% @cocktail.doses.each do |d| %>
      <div class="col-12 col-lg-6">
        <div class="card my-3">
          <div class="card-header bg-dark text-light">
            <p>&mdash; <%= d.ingredient.name %> &mdash;</p>
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <div class="dose-content">
                <p><%= d.description %></p>
              </div>
            </blockquote>
          </div>
          <div class="dose-footer my-0 py-1 d-flex flex-column align-items-center">
            <%= link_to dose_path(d), method: :delete, class: "link", data: { confirm: 'Are you sure you want to delete this dose?' } do %>
            <i class="fa fa-trash"> Remove </i>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <%= link_to root_path, class: "btn-elegant" do %>
  <i class="fa fa-undo"> Back to cocktails</i>
  <% end %>
</div>
